@article{Broich2011Remotelysensedforest,
  title = {Remotely Sensed Forest Cover Loss Shows High Spatial and Temporal Variation across {{Sumatera}} and {{Kalimantan}}, {{Indonesia}} 2000\textendash{}2008},
  volume = {6},
