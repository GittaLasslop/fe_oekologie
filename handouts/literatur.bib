  author = {Fritz, Steffen and See, Linda and McCallum, Ian and Schill, Christian and Obersteiner, Michael and van der Velde, Marijn and Boettcher, Hannes and Havl{\'\i}k, Petr and Achard, Fr{\'e}d{\'e}ric},
