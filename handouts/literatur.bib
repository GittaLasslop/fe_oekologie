  author = {Wang, Yujie and Woodcock, Curtis E and Buermann, Wolfgang and Stenberg, Pauline and Voipio, Pekka and Smolander, Heikki and H{\"a}me, Tuomas and Tian, Yuhong and Hu, Jiannan and Knyazikhin, Yuri and Myneni, Ranga B},
  month = may,
  year = {2004},
